@page "/LogEvents"

@using Microsoft.AspNetCore.SignalR.Client
@using NLog.SignalR
@inject NavigationManager Navigation



<AuthorizeView Roles="Admin">
    <Authorized>
        <div class="row">
            <div class="col">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Event</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Messages)
                        {
                            <tr>
                                <td>@item.Message</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        <div class="alert alert-warning" role="alert">
            <h4 class="alert-heading">No Access</h4>
            <hr>
            <p>You don't have the required permission to access this resource</p>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    private List<LogEvent> Messages { get; set; } = new List<LogEvent>();
    private HubConnection? hubConnection;


    protected override async Task OnInitializedAsync()
    {
        hubConnection = new HubConnectionBuilder()
            .WithUrl(Navigation.ToAbsoluteUri("/logginghub"))
            .Build();


        hubConnection.On<LogEvent>("Log", (e) =>
        {
            if (Messages.Count > 100) Messages.RemoveAt(0);
            Messages.Add(e);
            InvokeAsync(StateHasChanged);
        });


        await hubConnection.StartAsync();
    }
}
