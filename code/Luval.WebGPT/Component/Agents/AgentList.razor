@using Luval.GPT.Data.Entities
@using Luval.WebGPT.Component.Auth
@using Luval.WebGPT.Presenter

@inject AgentPresenter presenter


<AuthorizeView>
    <Authorized>
        <div class="d-flex flex-row">
            @foreach (var a in presenter.GetAgents())
            {
                <div class="card" style="width: 18rem; padding-left: 5px">
                    <img src="@a.ImageUrl" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@a.Name</h5>
                        <p class="card-text">@a.Description</p>
                        <a href="@GetAgentUrl(a)" class="btn btn-primary">Run</a>
                        <a href="#" class="btn btn-secondary">Edit</a>
                        <a href="@GetListUrl(a)" class="btn btn-info">List</a>
                    </div>
                </div>
            }
        </div>
    </Authorized>
</AuthorizeView>

@code {
    string GetAgentUrl(PushAgent a)
    {
        return $"/Agent/{a.Id}";
    }

    string GetListUrl(PushAgent a)
    {
        return $"/Agent/{a.Id}/List";
    }
}